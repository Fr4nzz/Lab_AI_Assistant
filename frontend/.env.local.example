# Python backend URL
BACKEND_URL=http://localhost:8000

# OpenRouter API Key (for topic naming with FREE model)
# Get from: https://openrouter.ai/keys
# Free models: nvidia/nemotron-3-nano-30b-a3b:free, google/gemma-2-9b-it:free
OPENROUTER_API_KEY=

# ============================================================
# Authentication (NextAuth.js v5)
# ============================================================

# Generate with: npx auth secret
AUTH_SECRET=

# Google OAuth credentials
# Get from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Email whitelist (optional, comma-separated)
# If empty, all verified Google emails are allowed
# Example: admin@example.com,user@example.com
ALLOWED_EMAILS=

# Trust host (needed for Cloudflare tunnel or other proxies)
AUTH_TRUST_HOST=true
